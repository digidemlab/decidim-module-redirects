<div class="card">
  <div class="card-divider">
    <h2 class="card-title flex--sbc">
      <div>
        <%= t "redirections.form.title", scope: "decidim.redirects.admin" %>
      </div>

      <div class="flex--cc flex-gap--1">
        <div id="js-other-actions-wrapper">
          <%= link_to t("actions.back", scope: "decidim.redirects.admin"), redirections_path, class: "button hollow tiny button--simple" %>
        </div>
      </div>
    </h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.number_field :priority, autofocus: true %>
    </div>

    <div class="row column">
      <%= form.text_field :path %>
    </div>

    <div class="row column">
      <%= form.text_field :parameters %>
    </div>

    <div class="row column">
      <%= form.check_box :external %>
    </div>

    <div class="row column">
      <%= form.text_field :target %>
    </div>
  </div>
</div>
